BoxLayout:
    orientation:'vertical'

    MDToolbar:
        title: 'Osobní databáze'
        md_bg_color: .8, .2, .2, 1
        specific_text_color: 1, 1, 1, 1

    MDBottomNavigation:
        id: navigation
        panel_color: .8, .8, .4, 1

        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'Osobní databáze'
            icon: 'card-bulleted'


<PovolaniContent>:
    orientation: 'vertical'
    size_hint_x: 1
    size_hint_y: None
    height: "100dp"

    MDTextField:
        id: povolani_name
        text: 'jméno povolání'
        pos_hint: {'center_x': .5, 'center_y': .9}

    MDDropDownItem:
        id: rasa_item
        pos_hint: {'center_x': .5, 'center_y': .7}
        size_hint_x: 1
        text: 'Rasa'
        on_release: self.parent.menu_rasy.open()

<RasaContent>:
    orientation: 'vertical'
    size_hint_x: 1
    size_hint_y: None
    height: "100dp"

    MDTextField:
        id: rasa_name
        text: 'Název rasy'
        pos_hint: {'center_x': .5, 'center_y': .7}

<PopisContent>:
    orientation: 'vertical'
    size_hint_x: 1
    size_hint_y: None
    height: "100dp"

    MDTextField:
        id: popis_text
        text: 'Popis povolání'
        pos_hint: {'center_x': .5, 'center_y': .7}
